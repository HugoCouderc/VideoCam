<div ng-controller="addcamera">
	<form novalidate class="simple-form">
		Nom: <input type="text" ng-model="camera.name" /><br /> Adresse: <input
			type="text" ng-model="camera.adress" /><br /> <input type="button"
			ng-click="reset()" value="Reset" /> <input type="submit"
			ng-click="send(camera)" value="Envoyer" />
	</form>
</div>

<script>
	angular.module('Thisapp', [])
	  .controller('addcamera', ['$scope','$http', function($scope,$http) {
   		$scope.send=function(camera){
			console.log(camera);
			$http.post("http://localhost:1337/camera",$scope.camera);
			};

     	$scope.reset = function() {
      		$scope.camera = angular.copy($scope.master);
      	};
      $scope.reset();
    }]);
</script>