<div class="row" ng-controller="adduser">
	<div class="col-md-8 col-md-offset-2">
	<h2>Inscription</h2>
		<form novalidate>
			<div class="form-group">
				<label for="username">Nom D'utilisateur :</label> <input type="text"
					class="form-control" id="username" name="username" ng-model="user.username">
			</div>
			<div class="form-group">
				<label for="email">Adresse E-mail :</label> <input type="email"
					class="form-control" id="email" name="email" ng-model="user.email">
			</div>
			<div class="form-group">
				<label for="password1">Mot de passe :</label> <input type="password"
					class="form-control" id="password1" ng-model="user.password">
			</div>
			<!-- <div class="form-group">
				<label for="password2">Confirmer le mot de passe :</label> <input
					type="password" class="form-control" id="password2">
			</div> -->
			<button type="submit" class="btn btn-default pull-right" ng-click="send(user)">Valider</button>
		</form>

		<script>
			angular.module('Thisapp', [])
			  .controller('adduser', ['$scope','$http', function($scope,$http) {
				$scope.send=function(user){
					console.log(user);
					$http.post("http://localhost:1337/auth/signup",$scope.user);
					};

				$scope.reset = function() {
					$scope.user = angular.copy($scope.master);
				};
			  $scope.reset();
			}]);
		</script>
	</div>
</div>